{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "target": "es2015",
    "module": "nodenext",
    "outDir": "dist",
    "lib": ["ES2023", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "@constants": ["src/lib/constants"],
      "@domain": ["src/lib/domain"],
      "@entry": ["src"],
      "@core": ["src/lib/core"],
      "@namespaces": ["src/lib/namespaces"],
      "@types": ["src/lib/types"],
      "@errors": ["src/lib/errors"],
      "@test-support": ["test-support"]
    }
  },
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": ["**/*.ts", "**/*.js", "**/*.mts", ".eslintrc.js"]
}
